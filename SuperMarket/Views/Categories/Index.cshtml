@using SuperMarket.Models
@model List<CategoryModel>

@{
    ViewData["Title"] = "Create Page";
}

<div class="container mt-5">
    <h1 class="display-4 text-success text-center mb-4">Manage Categories</h1>
    <p class="lead text-center text-secondary mb-5">
        Organize your store’s categories for a seamless shopping experience. Easily add, edit, or remove categories to keep your inventory up-to-date.
    </p>

    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <h5 class="card-title text-primary mb-3">Categories</h5>
            <ul class="list-group">
                @foreach (var category in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/categories/edit/@category" class="text-decoration-none text-dark font-weight-bold">
                            @category.Name
                        </a>
                        <span>
                            <a href="/categories/edit/@category" class="badge badge-primary badge-pill mr-2">Edit</a>
                            <a href="/categories/delete/@category" class="badge badge-danger badge-pill">Delete</a>
                        </span>
                    </li>
                }
                <!-- Additional predefined items -->
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/categories/edit/3" class="text-decoration-none text-dark font-weight-bold">Dairy Products</a>
                    <span>
                        <a href="/categories/edit/3" class="badge badge-primary badge-pill mr-2">Edit</a>
                        <a href="/categories/delete/3" class="badge badge-danger badge-pill">Delete</a>
                    </span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/categories/edit/4" class="text-decoration-none text-dark font-weight-bold">Bakery</a>
                    <span>
                        <a href="/categories/edit/4" class="badge badge-primary badge-pill mr-2">Edit</a>
                        <a href="/categories/delete/4" class="badge badge-danger badge-pill">Delete</a>
                    </span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="/categories/edit/5" class="text-decoration-none text-dark font-weight-bold">Vegetables</a>
                    <span>
                        <a href="/categories/edit/5" class="badge badge-primary badge-pill mr-2">Edit</a>
                        <a href="/categories/delete/5" class="badge badge-danger badge-pill">Delete</a>
                    </span>
                </li>
            </ul>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/categories/create" class="btn btn-success btn-lg shadow-sm">Add New Category</a>
    </div>
</div>
