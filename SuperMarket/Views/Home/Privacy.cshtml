@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container my-5">
    <h1 class="display-4 text-center text-primary mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h5 class="card-title text-secondary mb-3">Our Commitment to Your Privacy</h5>
            <p class="card-text">
                This page is dedicated to outlining our privacy practices. We are committed to ensuring that your privacy is protected and that any personal data you provide is handled responsibly.
            </p>
            <p class="card-text">
                Please read this policy to understand how we collect, use, and protect your information when you visit our site. If you have any questions or concerns, feel free to <a href="/contact" class="text-decoration-none text-info">contact us</a>.
            </p>
        </div>
    </div>
</div>
